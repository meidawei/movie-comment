/* pages/movie_detail/movie_detail.wxss */
/*影片头部*/
.poster{
  height: 360rpx;
  position: relative;
}

.poster-image{
  height: 100%;
  background: #000;
}

.poster-image image{
  opacity: .3;
}

.cover{
  position: absolute;
  left: 25rpx;
  top: 125rpx;
  display: flex;
}

.cover-image{
  width: 200rpx;
  height: 280rpx;
  margin-right: 20px;
}

.cover-image image{
  width: 100%;
  height: 100%;
}

.profile{
  color: #fff;
}

.profile .title-cn{
  font-size: 22px;
}
.profile .title-en{
  font-size: 18px;
}

.profile .score{
  display: flex;
  margin-top: 5px;
}

.profile .score .score-num{
  font-size: 32px;
  margin-right: 10px;
}

.score .score-star{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.score .star{
  width: 180rpx;
  height: 18px;
}

.score .star canvas{
  width: 100%;
  height: 100%;
}

.score .total-num{
  font-size: 12px;
  color: #ccc;
  margin-left: 4px;
}

.score-none{
  margin-top: 10px;
}

/*影片标签*/
.label{
  padding: 0 25rpx;
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
}

.label-ul{
  display: flex;
  flex-wrap: wrap;
}

.label-li{
  font-size: 14px;
  color: #000;
  margin-right: 10px;
}

/*想看-看过*/
.eval-btn{
  margin-top: 20rpx;
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
}

.eval-btn button{
  width: 320rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: solid 1px #F39C22;
  color: #F39C22;
  font-size: 14px;
}

.eval-btn .full{
  width: 100%;
}

/*剧情简介*/
.plot{
  padding: 25rpx;
}

.plot .title{
  font-size: 14px;
  color: #999;
}

.plot .desc{
  font-size: 14px;
  color: #000;
  margin-top: 5px;
}

.plotCut{
  color: #F39C22;
}

/*评价*/
.eval{
  padding: 25rpx;
}

.eval .title{
  font-size: 14px;
  color: #999;
}

.eval-li{
  position: relative;
  margin: 10px 0;
  display: flex;
}

.eval-li .avatar{
  margin-right: 10px;
}

.avatar image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.row{
  display: flex;
  align-items: center;
}

.nickname{
  font-size: 14px;
  color: #000;
  margin-right: 5px;
}

/*评分*/
.eval .score{
  display: flex;
}

.eval .score .star{
  width: 138rpx;
  height: 35rpx;
  position: relative;
  margin-right: 5px;
  overflow: hidden;
}

.eval .score .star .grey{
  position: absolute;
  left: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: url(https://cloud-minapp-9266.cloud.ifanrusercontent.com/1f5ouEtPiVGMGRZT.png);
  background-size:100% 100%;
}

.eval .score .star .light{
  position: absolute;
  left: 0px;
  right: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  background-size:100% 100%;
}

.created-at{
  font-size: 12px;
  color: #999;
}

.like{
  position: absolute;
  right: 0;
  top: 0;
}

.like text{
  font-size: 12px;
  color: #666;
}

.liked text{
  color: #F39C22;
}

.icon-like,
.icon-like-active{
  margin-right: 2px;
}