/*module*/
.section{
  margin: 20px 0;
}

.h1{
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 0 25rpx;
  border-left: solid 2px #5CC16D;
  margin-bottom: 10px;
}

.h1 .title{
  font-size: 14px;
  color: #000;
  font-weight: bold;
}

.h1 .more{
  font-size: 14px;
  color: #5CC16D;
}

.section-list{
  width: 100%;
  white-space: nowrap;
  margin-top: 20px;
}

.section-li{
  width: 200rpx;
  display: inline-flex;
  flex-direction: column;
  margin-left:20rpx;
  overflow: hidden;
}

.section-li:last-child{
  margin-right: 20rpx;
}

.section-li image{
  width: 200rpx;
  height: 280rpx;
}

.section-li .title{
  font-size: 12px;
  margin-top:5px;
}

.score{
  display: flex;
}

.score .star{
  width: 138rpx;
  height: 35rpx;
  position: relative;
  margin-right: 5px;
  overflow: hidden;
}

.score .star .grey{
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  background: url(https://cloud-minapp-9266.cloud.ifanrusercontent.com/1f53jYcxLJYMjHUo.png);
  background-size:100% 100%;
}

.score .star .light{
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  background-size:100% 100%;
}

.score .num{
  font-size: 12px;
  color: #999;
}