/**app.wxss**/
@import 'common/icon.wxss';
@import 'wxParser/index.wxss'; /*富文本渲染*/

/*reset*/
page{
  background-color: #f9f9f9;
  font-size: 14px;
}

image{
  width: 100%;
  height: 100%;
}

view,
textarea,
input{
  box-sizing: border-box;
}

slider,button{
  margin: 0;
  padding: 0;
}

button::after{
  border: none;
}

/*common*/
.text-overflow{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-s{
  font-size: 12px;
  color: #999;
}

.text-m{
  font-size: 14px;
  color: #666;
}

.text-l{
  font-size: 16px;
  color: #333;
}